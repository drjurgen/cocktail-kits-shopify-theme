<footer class="site-footer" style="background-color: {{ section.settings.footer_color }}">
  <div class="footer-info">
    {% for link in linklists.footer.links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
    <a href={{section.settings.smiley_url}} target="_blank" rel="noopener">{{ section.settings.health_status }}</a>
    <p>CVR: {{section.settings.cvr}}</p>
    <p>© Copyright {{ 'now' | date: "%Y" }} Cocktail-kits</p>
  </div>

  <div class="socials">
    <a href={{section.settings.facebook_url}} target="_blank" rel="noopener"><img src="{{ 'facebook-f.svg' | asset_url }}" alt="Cocktail-kits Facebook" style="width: 25px; height: 25px;"></a>
    <a href={{section.settings.youtube_url}} target="_blank" rel="noopener"><img src="{{ 'youtube.svg' | asset_url }}" alt="Cocktail-kits Youtube" sstyle="width: 25px; height: 25px;"></a>
    <a href={{section.settings.instagram_url}} target="_blank" rel="noopener"><img src="{{ 'instagram.svg' | asset_url }}" alt="Cocktail-kits Instagram" style="width: 25px; height: 25px;"></a>
  </div>

</footer>

