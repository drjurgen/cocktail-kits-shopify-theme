{%- if section.settings.show_announcement -%}
  {%- if section.settings.home_page_only == false or template.name == 'index' -%}

    {%- if section.settings.link == blank -%}
      <div class="announcement-container" style="background-color: {{ section.settings.announcement_color }}">
    {%- else -%}
      <a href="{{ section.settings.link }}" >
    {%- endif -%}

      <p class="header-first-announcement">{{ section.settings.announcement1 | escape }}</p>

      <p class="header-second-announcement">{{ section.settings.announcement2 | escape }}</p>

    {%- if section.settings.link == blank -%}
      </div>
    {%- else -%}
      </a>
    {%- endif -%}

  {%- endif -%}
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "color",
      "id": "announcement_color",
      "label": "Announcement Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement1",
      "label": "First announcement",
      "default": "Announce something here"
    },
    {
      "type": "text",
      "id": "announcement2",
      "label": "Second announcement",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link"
    }
  ]
}
{% endschema %}