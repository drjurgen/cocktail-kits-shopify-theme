<section id="landingpage-3-col"  style="background-color: {{ section.settings.background_color }}">
    <div class="page-width three-col-container">
        <div class="text-col">
            <h1>{{section.settings.heading}}</h1>
            {{section.settings.paragraph}}
        </div>
        <div class="img-col lazyload" style="background-image: url({{ section.settings.image_left | img_url: '1200x1200' }});"></div>
        <div class="img-col lazyload" style="background-image: url({{ section.settings.image_right | img_url: '1200x1200' }});"></div>
    </div>
</section>

{% schema %}
{
  "name": {
    "en": "Landingpage 3 Columns"
  },
  "settings": [ 
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    }, 
    {
      "type": "text",
      "id": "heading",
      "label": "Text Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image - Left"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image - Right"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Landingpage 3 Columns"
      },
      "category": {
        "en": "Landingpage"
      }
    }
  ]
}
{% endschema %}