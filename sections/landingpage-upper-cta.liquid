{%- assign product_left = all_products[section.settings.product_left] -%}
{%- assign product_middle = all_products[section.settings.product_middle] -%}
{%- assign product_right = all_products[section.settings.product_right] -%}

<section id="upper-cta" class="page-width">
    <div class="text-col">
        <h1>{{section.settings.heading}}</h1>
        {{section.settings.paragraph}}
        <a href="{{section.settings.cta_url}}">{{section.settings.cta_text}}</a>
    </div>
    <div class="img-col-container">
      <a href="/products/{{product_left.handle}}" class="img-col">
          <div class="lazyload" data-aos="fade-up" data-aos-delay="100" data-aos-offset="0">{{ product_left.featured_image | img_url: '400x400', scale: 1 | img_tag: product_left.featured_image.alt | img_alt: product_left.featured_image.alt, 'lazyload' }}</div>
      </a>

      <a href="/products/{{product_middle.handle}}" class="img-col">
          <div class="lazyload" data-aos="fade-up" data-aos-delay="200" data-aos-offset="25">{{ product_middle.featured_image | img_url: '400x400', scale: 1 | img_tag: product_middle.featured_image.alt | img_alt: product_middle.featured_image.alt, 'lazyload' }}</div>
      </a>

      <a href="/products/{{product_right.handle}}" class="img-col">
          <div class="lazyload" data-aos="fade-up" data-aos-delay="300" data-aos-offset="50">{{ product_right.featured_image | img_url: '400x400', scale: 1 | img_tag: product_right.featured_image.alt | img_alt: product_right.featured_image.alt, 'lazyload' }}</div>
      </a>
    </div>
</section>

{% schema %}
{
  "name": {
    "en": "Landingpage Upper CTA"
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Text Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call To Action Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Call To Action Link"
    },
    {
      "type": "product",
      "id": "product_left",
      "label": "Product - Left"
    },
    {
      "type": "product",
      "id": "product_middle",
      "label": "Product - Middle"
    },
    {
      "type": "product",
      "id": "product_right",
      "label": "Product - Right"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Landingpage Upper CTA"
      },
      "category": {
        "en": "Landingpage"
      }
    }
  ]
}
{% endschema %}