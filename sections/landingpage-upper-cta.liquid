<section id="upper-cta" class="page-width">
    <div class="text-col">
        <h1>{{section.settings.heading}}</h1>
        {{section.settings.paragraph}}
        <a href="{{section.settings.cta_url}}">{{section.settings.cta_text}}</a>
    </div>
    <div class="img-col lazyload">{{ section.settings.image_left | img_url: 'master', scale: 1 | img_tag: section.settings.image_left.alt | img_alt: section.settings.image_left.alt, 'lazyload' }}</div>
    <div class="img-col lazyload">{{ section.settings.image_middle | img_url: 'master', scale: 1 | img_tag: section.settings.image_middle.alt | img_alt: section.settings.image_middle.alt, 'lazyload' }}</div>
    <div class="img-col lazyload">{{ section.settings.image_right | img_url: 'master', scale: 1 | img_tag: section.settings.image_right.alt | img_alt: section.settings.image_right.alt, 'lazyload' }}</div>
</section>

{% schema %}
{
  "name": {
    "en": "Landingpage Upper CTA"
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Text Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call To Action Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Call To Action Link"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image - Left"
    },
    {
      "type": "image_picker",
      "id": "image_middle",
      "label": "Image - Middle"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image - Right"
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Landingpage Upper CTA"
      },
      "category": {
        "en": "Landingpage"
      }
    }
  ]
}
{% endschema %}